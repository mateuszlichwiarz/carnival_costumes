{% extends 'base.html.twig' %}

{% block body %}
    <div id = 'content'>
        <br><br><br><br><br><br>
        <div class = "dashboard">
             <h2>Visits Panel</h2>
             <div class = "admin-name">
                You logged in, {{ admin.getUsername|capitalize }} <br><br>
            </div>
            {% for message in app.flashes('notice') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
            Visits <br><br>
            Date displayed {{ date }} <br>
            <div class = "current">
            Summary visits <br>
                In Week: {{ sumWeekVisits }} <br>
                In Month: {{ sumMonthVisits }} <br>
                In Year: {{ sumYearVisits }} <br>
            </div>
            <br>
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
